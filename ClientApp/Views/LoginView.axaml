<UserControl
    d:DesignHeight="500"
    d:DesignWidth="300"
    mc:Ignorable="d"
    x:Class="ClientApp.Views.LoginView"
    x:DataType="vm:LoginViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:ClientApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    xmlns:viewModels="clr-namespace:ClientApp.ViewModels"
    xmlns:vm="using:ClientApp.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>

        <StackPanel Margin="20" Spacing="10">
            <TextBlock
                FontSize="24"
                HorizontalAlignment="Center"
                Margin="0,10,0,0"
                Text="Login" />

            <Grid
                Margin="0,70"
                RowDefinitions="*,*,*,*"
                RowSpacing="20">
                <Panel Grid.Row="1">
                    <TextBox
                        Classes.clearButton="true"
                        Grid.Row="1"
                        Name="UserName"
                        Text="{Binding LoginModel.Username}"
                        Watermark="Username" />
                </Panel>


                <Panel Grid.Row="2">
                    <TextBox
                        Classes.revealPasswordButton="true"
                        Grid.Row="2"
                        Name="Password"
                        PasswordChar="*"
                        Text="{Binding LoginModel.Password}"
                        Watermark="Password" />
                    <ui:TeachingTip
                        IconSource="Refresh"
                        IsOpen="{Binding IsTeachOpen}"
                        Name="TeachingTip1"
                        Subtitle="Your teaching text here"
                        Target="{Binding #Password}"
                        Title="Title" />
                </Panel>

                <Grid
                    ColumnDefinitions="*,*"
                    ColumnSpacing="30"
                    Grid.Row="3"
                    HorizontalAlignment="Center"
                    RowSpacing="30">

                    <Button
                        Command="{Binding LogIn}"
                        Content="Login"
                        Grid.Column="0"
                        Width="90">
                        <Button.Classes>accent</Button.Classes>
                    </Button>

                    <Button
                        Command="{Binding NavigateToSignIn}"
                        Content="Sign Up"
                        Grid.Column="1"
                        Width="90">
                        <Button.Classes>accent</Button.Classes>
                    </Button>
                </Grid>
            </Grid>
        </StackPanel>

        <!--  Loading Overlay  -->
        <controls:LoadingOverlayView DataContext="{Binding LoadingOverlay}" />
    </Grid>


</UserControl>