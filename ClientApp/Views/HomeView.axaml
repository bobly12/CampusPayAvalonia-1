<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="ClientApp.Views.HomeView"
    x:DataType="viewModels:HomeViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
    xmlns:converters="clr-namespace:ClientApp.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    xmlns:viewModels="clr-namespace:ClientApp.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <converters:AmountColorConverter x:Key="AmountColorConverter" />
    </UserControl.Resources>

    <Border>
        <Grid Margin="50" RowDefinitions="Auto,*">
            <!--  Title  -->
            <TextBlock
                FontSize="40"
                Grid.Row="0"
                Text="{Binding UserModel.UserName, StringFormat=Welcome {0}}" />

            <!--  Content  -->
            <Grid ColumnDefinitions="*,Auto" Grid.Row="1">

                <!--  Recent Transaction List  -->
                <Border
                    Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                    CornerRadius="40"
                    Grid.Column="0"
                    Margin="20,20">

                    <Grid Margin="30" RowDefinitions="Auto,*">
                        <TextBlock
                            FontSize="25"
                            Grid.Column="0"
                            Text="Recent Transactions" />
                        <ui:SymbolIcon
                            FontSize="20"
                            Grid.Row="0"
                            HorizontalAlignment="Right"
                            Margin="5"
                            Symbol="Refresh"
                            VerticalAlignment="Top" />
                        <Button
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Command="{Binding ReloadTransactionCommand}"
                            Grid.Row="0"
                            Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Width="30" />
                        <ScrollViewer Grid.Row="1" Margin="0,20,0,0">
                            <ListBox
                                Background="Transparent"
                                ItemsSource="{Binding RecentTransaction}"
                                SelectedItem="{Binding SelectedTransaction}"
                                SelectionMode="Toggle">

                                <ListBox.Styles>
                                    <Style Selector="ListBoxItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        <Setter Property="Margin" Value="0,5" />
                                        <Setter Property="Padding" Value="5" />
                                        <Setter Property="Cursor" Value="Hand" />
                                    </Style>
                                    <Style Selector="ListBoxItem:pointerover /template/ Border">
                                        <Setter Property="Background" Value="#22000000" />
                                    </Style>
                                    <Style Selector="ListBoxItem:selected /template/ Border">
                                        <Setter Property="Background" Value="#33007ACC" />
                                        <Setter Property="CornerRadius" Value="10" />
                                    </Style>
                                </ListBox.Styles>

                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Background="{DynamicResource LayerOnAcrylicFillColorDefaultBrush}"
                                            CornerRadius="10"
                                            Margin="5"
                                            Padding="15">
                                            <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                                                <!--  Title & Amount  -->
                                                <TextBlock
                                                    FontSize="18"
                                                    FontWeight="Bold"
                                                    Grid.Column="0"
                                                    Grid.Row="0"
                                                    Text="{Binding DisplayTitle}" />


                                                <TextBlock
                                                    FontSize="16"
                                                    FontWeight="SemiBold"
                                                    Foreground="{Binding DisplayAmount, Converter={StaticResource AmountColorConverter}}"
                                                    Grid.Column="2"
                                                    Grid.Row="0"
                                                    Text="{Binding DisplayAmount}" />

                                                <!--  Date & Transaction Ref  -->
                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="Gray"
                                                    Grid.Column="0"
                                                    Grid.Row="1"
                                                    Text="{Binding CreatedAt, StringFormat='{}{0:dd MMM yyyy hh:mm tt}'}" />

                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="Gray"
                                                    Grid.Column="2"
                                                    Grid.Row="1"
                                                    Text="{Binding TransactionRef}" />

                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>

                    </Grid>

                </Border>

                <Grid
                    Grid.Column="1"
                    Margin="20,20"
                    RowDefinitions="Auto,*">

                    <!--  Balance Card  -->
                    <Border
                        Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                        CornerRadius="40"
                        Grid.Row="0"
                        Height="160"
                        Width="450">


                        <Grid Margin="20" RowDefinitions="Auto,*">
                            <TextBlock
                                FontSize="25"
                                Grid.Row="0"
                                HorizontalAlignment="Left"
                                Margin="0,10,0,0"
                                VerticalAlignment="Top">
                                Current Balance
                            </TextBlock>

                            <StackPanel
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal"
                                Spacing="6"
                                VerticalAlignment="Center">
                                <TextBlock FontSize="40">
                                    â‚±
                                </TextBlock>
                                <TextBlock FontSize="40" Text="{Binding WalletModel.Balance, StringFormat=F2}" />
                            </StackPanel>

                            <ui:SymbolIcon
                                FontSize="20"
                                Grid.Row="0"
                                HorizontalAlignment="Right"
                                Margin="5"
                                Symbol="Refresh"
                                VerticalAlignment="Top" />
                            <Button
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Command="{Binding ReloadWalletCommand}"
                                Grid.Row="0"
                                Height="30"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Width="30" />
                        </Grid>
                    </Border>


                    <!--  Buttons  -->
                    <Grid
                        ColumnDefinitions="Auto,Auto"
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        Margin="20"
                        VerticalAlignment="Top">
                        <Button
                            Command="{Binding NavigateToSendViewCommand}"
                            Content="Send"
                            CornerRadius="20"
                            Grid.Column="0"
                            Height="50"
                            Margin="20,0,10,0"
                            Width="200">
                            <Button.Classes>accent</Button.Classes>
                        </Button>
                        <Button
                            Command="{Binding NavigateToReceiveViewCommand}"
                            Content="Receive"
                            CornerRadius="20"
                            Grid.Column="1"
                            Height="50"
                            Margin="10,0,20,0"
                            Width="200">
                            <Button.Classes>accent</Button.Classes>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>